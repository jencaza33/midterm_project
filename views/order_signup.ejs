      <div class="form-group">
        <label for="phone number">Phone number</label>
        <input type="tel" class="form-control" id="phone-number" placeholder="No Phone number no Ordering" name="phoneNumber" required>
      </div>
      <div class="form-group">
        <button type="submit" class="btn">BURGER ME!</button>
      </div>
    </form>
  </section>



